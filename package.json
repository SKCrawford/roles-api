{
  "name": "nest-prisma-gql-starter",
  "version": "0.0.0",
  "description": "description",
  "author": "SKCrawford",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "make:clean": "bash scripts/make-clean.sh",
    "make:docker": "bash scripts/make-docker.sh",
    "make:prisma": "yarn prisma generate && yarn prisma deploy",
    "make:types": "bash scripts/make-types.sh",
    "make": "yarn make:clean; yarn make:docker; yarn make:prisma; yarn make:types;"
  },
  "dependencies": {
    "@nestjs/common": "^6.3.1",
    "@nestjs/core": "^6.3.1",
    "@nestjs/graphql": "^6.2.4",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/platform-express": "^6.3.1",
    "apollo-server-express": "^2.6.3",
    "bcrypt": "^3.0.5",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "compression": "^1.7.4",
    "dotenv": "^8.0.0",
    "graphql": "^14.2.0",
    "graphql-tools": "^4.0.4",
    "helmet": "^3.16.0",
    "node-fetch": "^2.6.7",
    "pg": "^7.9.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "type-graphql": "^0.17.0",
    "typescript": "^3.5.2",
    "validator": "^11.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.0.0",
    "@nestjs/testing": "^6.3.1",
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^0.0.36",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.17.0",
    "@types/graphql": "^14.2.1",
    "@types/helmet": "^0.0.43",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.8",
    "@types/node-fetch": "^2.3.7",
    "@types/supertest": "^2.0.5",
    "@types/validator": "^10.11.1",
    "graphql-cli": "^3.0.11",
    "jest": "^24.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.18.2",
    "prisma": "^1.34.0",
    "prisma-binding": "^2.3.13",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0",
    "ts-loader": "^6.0.3",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.17.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@lib/core$": "<rootDir>/modules/core",
      "^@lib/gql-bindings$": "<rootDir>/modules/bundled.gql-bindings.ts",
      "^@lib/prisma$": "<rootDir>/modules/core/prisma",
      "^@lib/utils$": "<rootDir>/utils"
    }
  }
}
